<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="processEngineConfiguration"
          class="org.camunda.bpm.engine.impl.cfg.StandaloneInMemProcessEngineConfiguration">
        <property name="processEnginePlugins">
            <list>
                <bean id="spinPlugin" class="org.camunda.spin.plugin.impl.SpinProcessEnginePlugin"/>
            </list>
        </property>

        <property name="customEventHandlers">
            <list merge="true">
                <bean class="org.camunda.bpm.extension.process_test_coverage.listeners.CompensationEventCoverageHandler"/>
            </list>
        </property>

        <property name="historyEventHandler">
            <bean class="org.camunda.bpm.extension.process_test_coverage.listeners.FlowNodeHistoryEventHandler"/>
        </property>

        <property name="customPostBPMNParseListeners">
            <list>
                <bean class="org.camunda.bpm.extension.process_test_coverage.listeners.PathCoverageParseListener"/>
            </list>
        </property>
    </bean>

    <!-- Alternatively use the ProcessCoverageInMemProcessEngineConfiguration with programmatically registered listeners and handlers. -->
    <!-- bean id="processEngineConfiguration" class="org.camunda.bpm.extension.process_test_coverage.junit.rules.ProcessCoverageInMemProcessEngineConfiguration">
        </bean -->

</beans>